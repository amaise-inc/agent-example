{
  "compilerOptions": {
    "target": "ES2024",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true
  },
  "include": [
    "lib/**/*.ts",
    "examples/**/*.ts",
    "ci/**/*.ts",
    "generated/**/*.ts",
    "vitest.config.ts"
  ]
}
